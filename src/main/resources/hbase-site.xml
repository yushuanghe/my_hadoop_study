<configuration>
    <!-- 配置HBASE数据存放在hdfs的路径 -->
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://shuanghe.com:8020/hbase</value>
    </property>

    <!-- 是否分布式：各组件是否运行在同一个jvm进程中 -->
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <!-- 指定HBASE所用的Zookeeper集群节点地址 -->
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>shuanghe.com:2181</value>
    </property>
</configuration>
